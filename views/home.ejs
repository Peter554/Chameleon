<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chameleon</title>

    <!-- bootstrap css -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <!-- fonts css -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    <!-- my css -->
    <link rel="stylesheet" href="home.css">
</head>

<body>

    <div class="container">

        <h1 id="title">Chameleon</h1>
        <img src="/chameleon.png" id="logo">



        <hr>

        <div class="row" id="signup">
            <div class="col-12"><input type="text" id="username" placeholder="Enter player name"></div>
            <div class="col-12"><button type="button" id="join">Join!</button></div>
            <div class="col-12" id="warn"></div>
        </div>

        <div id="game">


            <div class="row controls">
                <div class="col-6 minipad"><button id="reset">Reset grid</button></div>
                <div class="col-6 minipad"><button id="assign">Assign roles</button></div>
            </div>

            <hr>


            <div class="row users-online">
                <div class="col-12 minipad" id="onlinenow"></div>
            </div>

            <hr>

            <div class="row">
                <div class="col-6 minipad" id="roleholder"><strong id="role">Role unassigned</strong></div>
                <div class="col-6 minipad"><button id="hide-sensitive">Toggle</button></div>
            </div>

            <hr>

            <div class="row grid">
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
                <div class="col-6">
                    <div class="grid-item"></div>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-6 minipad"><button id="bootall">Boot users</button> </div>
            </div>

        </div>


    </div>

    <!-- client side socket js -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <!-- my js -->
    <script src="home.js"></script>

</body>

</html>
